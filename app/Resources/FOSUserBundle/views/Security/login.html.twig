{% extends 'base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="form-signin-our">
    <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="form-group mb-40">
            <a href="{{ path('homepage') }}"><img src="{{ asset('images/general/logo.gif') }}" alt="Logo"></a>
        </div>

        <div class="form-group">
            <label for="username" class="sr-only">{{ 'form.email'|trans }}</label>
            <input type="text" class="form-control input-lg" placeholder="{{ 'form.email'|trans }}" id="username" name="_username" value="{{ last_username }}" autocomplete="username"  required autofocus>
        </div>

        <div class="form-group mb-30">
            <label for="password" class="sr-only">{{ 'security.login.password'|trans }}</label>
            <input type="password" class="form-control input-lg" id="password" placeholder="{{ 'security.login.password'|trans }}" class="form-control" name="_password" required autocomplete="current-password" />
        </div>

        <button class="btn btn-lg btn-orange btn-block mb-40" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />{{ 'security.login.submit'|trans }}</button>
    </form>

    <div class="dark">
        <a href="#">Pamiršai slaptažodį?</a>
        <a class="pull-right" href="#">Neturi anketos?</a>
    </div>

</div>


{% endblock %}